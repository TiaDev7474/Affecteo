<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="800.0" prefWidth="1459.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="www.ong.affectero.Controller.LocationController">
   <children>
      <TableView fx:id="locationTable" layoutX="-1.0" layoutY="109.0" prefHeight="574.0" prefWidth="1179.0">
        <columns>
          <TableColumn fx:id="locationIdColumn" prefWidth="173.0" />
          <TableColumn fx:id="provinceColumn" minWidth="0.0" prefWidth="607.0" />
            <TableColumn fx:id="designColumn" prefWidth="540.0" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="addLocationButton" layoutX="1061.0" layoutY="44.0" mnemonicParsing="false" onAction="#handleCreateLocationClick" prefHeight="38.0" prefWidth="117.0" text="Create">
         <graphic>
            <FontAwesomeIconView glyphName="PLUS" />
         </graphic>
      </Button>
      <Button fx:id="updateLocation" layoutX="1070.0" layoutY="706.0" mnemonicParsing="false" onAction="#handleUpdateLocationClick" prefHeight="38.0" prefWidth="106.0" text="Update">
         <graphic>
            <FontAwesomeIconView glyphName="REFRESH" />
         </graphic>
      </Button>
      <Button fx:id="deleteLocation" layoutX="947.0" layoutY="706.0" mnemonicParsing="false" onAction="#handleDeleteLocationClick" prefHeight="38.0" prefWidth="106.0" text="Delete">
         <graphic>
            <FontAwesomeIconView glyphName="TRASH" />
         </graphic>
      </Button>
   </children>
</AnchorPane>
